function prod=times(A,B)
%various ways of taking a product in the Fourier domain

if isa(A,'mnmat') && isa(B,'mnmat')
  %convolution
  if compatible(A,B)
    prod=A;
    prod.c=A.c.*B.c;
    prod.s=A.s.*B.s;
  else
    error('A and B not compatible!')
  end
elseif isa(B,'double')
  if length(B)==1
    prod=A;
    prod.c=A.c*B;
    prod.s=A.s*B;
  elseif all(size(A)==size(B))
    Bmn=fftmn(B);
    if compatible(A,B)
      prod=A.*B;
    end
  end
else
  error('not implemented case')
end
  